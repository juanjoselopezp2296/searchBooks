<div class="formSearch">
    <form action="" method="post">
        <h1>Search Books</h1>

        <input type="text" id="txtSearch" name="txtSearch" placeholder="Enter search keywords">

        <input type="radio" id="author" name="filterBook" value="author" checked>
        <label for="author">Author</label>
                            
        <input type="radio" id="title" name="filterBook" value="title">
        <label for="title">Title</label>

        <input type="radio" id="allBooks" name="filterBook" value="allBooks">
        <label for="allBooks">Show All Books</label>
        <br>
        <button type="submit" id="btnSearch">Search</button>
    </form>
</div>

